<%- include('partials/header') %>

<%- include('partials/nav') %>
    
<div>
    <h2>Add League</h2>

    <form action="/leagues/add?_method=POST" method="post">
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" required>
        <div class="title error"></div>
        <label for="userId">User ID:</label>
        <input type="text" name="userId" id="userId" value="<%= user.id %>" readonly>
        <button>Add League</button>
    </form>
</div>

<script>
    const form = document.querySelector('form');
    const titleError = document.querySelector('.title.error')

        form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        //reset errors
        titleError.textContent = ''

        //get the values
        const title = form.title.value
        const usersId = form.userId.value

        try {
            const res = await fetch('/leagues/add', {
                method: 'POST',
                body: JSON.stringify({title, usersId}),
                headers: {'Content-Type': 'application/json'}
            })
            const data = await res.json()
            if(data.errors) {
                titleError.textContent = data.errors.title

            }
            if(!data.errors){
                window.location.replace("/");
            }
        }
        catch (err) {
            console.log(err)
        }
    })
</script>

<%- include('partials/footer') %>